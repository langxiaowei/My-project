<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.data.mapper.AlarmMapper">

    <resultMap id="AlarmMap" type="com.example.data.pojo.Alarm">
        <id property="id" column="id"/>
        <result property="deviceId" column="device_id"/>
        <result property="alarmType" column="alarm_type"/>
        <result property="level" column="level"/>
        <result property="metric" column="metric"/>
        <result property="threshold" column="threshold"/>
        <result property="actualValue" column="actual_value"/>
        <result property="status" column="status"/>
        <result property="message" column="message"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.data.pojo.Alarm" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_alarm
        (device_id, alarm_type, level, metric, threshold, actual_value, status, message)
        VALUES
        (#{deviceId}, #{alarmType}, #{level}, #{metric}, #{threshold}, #{actualValue}, #{status}, #{message})
    </insert>

    <sql id="Where">
        <where>
            <if test="deviceId != null"> AND device_id = #{deviceId} </if>
            <if test="alarmType != null and alarmType != ''"> AND alarm_type = #{alarmType} </if>
            <if test="level != null"> AND level = #{level} </if>
            <if test="status != null"> AND status = #{status} </if>
            <if test="startTime != null"> AND create_time <![CDATA[>=]]> #{startTime} </if>
            <if test="endTime != null"> AND create_time <![CDATA[<=]]> #{endTime} </if>
        </where>
    </sql>

    <select id="selectList" resultMap="AlarmMap">
        SELECT *
        FROM tb_alarm
        <include refid="Where"/>
        ORDER BY id DESC
        LIMIT #{offset}, #{size}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(1)
        FROM tb_alarm
        <include refid="Where"/>
    </select>

    <update id="updateStatus">
        UPDATE tb_alarm
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <select id="selectById" resultMap="AlarmMap">
        SELECT *
        FROM tb_alarm
        WHERE id = #{id}
    </select>

    <update id="ack">
        UPDATE tb_alarm
        SET status = 1
        WHERE id = #{id} AND status = 0
    </update>

    <update id="close">
        UPDATE tb_alarm
        SET status = 2
        WHERE id = #{id} AND status = 1
    </update>

    <select id="countToday" resultType="long">
        SELECT COUNT(1)
        FROM tb_alarm
        WHERE create_time >= CURDATE()
        <if test="status != null"> AND status = #{status} </if>
        <if test="level != null"> AND level = #{level} </if>
    </select>

</mapper>